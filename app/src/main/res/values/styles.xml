<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="ButtonStyle">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/button_background</item>
    </style>

    <style name="OkButtonStyle">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/button_green_background</item>
    </style>

    <style name="CancelButtonStyle">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/button_red_background</item>
    </style>




    <style name="RowCardViewStyle" parent="CardView">
        <item name="android:layout_marginBottom">3dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="cardCornerRadius">2dp</item>
    </style>


    <style name="EditText">
        <item name="android:layout_margin">2dp</item>
        <item name="android:background">@drawable/background_edit_text</item>
        <item name="android:maxLength">138</item>

        <item name="android:textCursorDrawable">@drawable/edittext_cursor_color</item>
    </style>



    <style name="DialogTitleTextView">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">17sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">20dp</item>
    </style>


    <style name="SettingRowStyle">
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_margin">1dp</item>
    </style>

    <style name="ToolBarStyle">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="ToolbarImageStyle">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">180dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TitleLarge">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
    </style>
    <style name="TitleSmall">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="WriteEditText" parent="EditText">

        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:background">@drawable/background_edit_text</item>
        <item name="android:gravity">top|left</item>
        <item name="android:layout_height">140dp</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
    </style>

</resources>
